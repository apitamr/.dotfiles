// Zed settings
// Docs: https://zed.dev/docs/configuring-zed

{
  // Appearance
  "session": {
    "trust_all_worktrees": true,
  },
  "git_panel": {
    "tree_view": true,
  },
  "always_treat_brackets_as_autoclosed": true,
  "colorize_brackets": true,
  "theme": {
    "mode": "dark",
    "light": "Kanso Zen (No italics)",
    "dark": "Kanso Zen (No italics)",
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Catppuccin Latte",
  },
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "cursor_shape": "bar",
  "scrollbar": { "show": "never" },
  "minimap": {
    "show": "never",
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "active_line_width": 2,
  },
  "inlay_hints": { "enabled": false },
  "sticky_scroll": { "enabled": true },

  // Window & Tabs
  "use_system_window_tabs": false,
  "confirm_quit": true,
  "title_bar": { "show_branch_icon": true, "show_user_picture": false },
  "tab_bar": { "show_nav_history_buttons": false },
  "tabs": { "file_icons": true },
  "toolbar": {
    "code_actions": false,
    "quick_actions": false,
  },

  // Editor Behavior
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "autosave": "off",
  "format_on_save": "off",
  "soft_wrap": "editor_width",
  "extend_comment_on_newline": false,
  "completion_menu_scrollbar": "always",
  "restore_on_startup": "launchpad",
  "hide_mouse": "on_typing_and_movement",
  "show_edit_predictions": false,

  // Project Panel
  "project_panel": {
    "git_status": true,
    "hide_gitignore": false,
    "auto_reveal_entries": true,
    "hide_root": true,
    "auto_fold_dirs": false,
    "file_icons": true,
    "folder_icons": true,
  },

  // Terminal
  "terminal": {
    "dock": "bottom",
    "font_family": "JetBrainsMono Nerd Font",
    "toolbar": { "breadcrumbs": true },
  },

  // Git & Diagnostics
  "git": {
    "blame": { "show_avatar": true },
    "inline_blame": { "enabled": true },
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 2,
      "min_column": 80,
      "max_severity": "info",
    },
  },

  // AI & Agent
  "agent": {
    "notify_when_agent_waiting": "all_screens",
    "default_profile": "ask",
    "default_model": {
      "provider": "GLM 4.6",
      "model": "glm-4.6",
    },
    "inline_assistant_model": {
      "provider": "ollama",
      "model": "glm-4.6:cloud",
    },
  },
  "features": { "edit_prediction_provider": "zed" },

  // MCP Context Servers
  "context_servers": {
    "chrome-devtools": {
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest"],
    },
  },

  // Language Servers
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."],
    },
  },
  "lsp": {
    "biome": {
      "settings": {
        "config_path": "./biome.jsonc",
        "require_config_file": true,
      },
    },
    "intelephense": {
      "initialization_options": {
        "enable": true,
        "completion": { "snippetSupport": true },
        "format": { "enable": true },
        "codeAction": { "enable": true },
        "diagnostics": {
          "enable": true,
          "undefinedProperties": true,
        },
      },
    },
  },

  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
}
