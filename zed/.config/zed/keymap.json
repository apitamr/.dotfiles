// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  // ============================================================================
  // GLOBAL BINDINGS (no context - applies everywhere)
  // ============================================================================
  {
    "bindings": {
      "ctrl-tab": "menu::SelectPrevious",
      "tab": "menu::SelectNext",
      "cmd-`": "editor::ToggleFocus"
    }
  },

  // ============================================================================
  // WORKSPACE
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "cmd-w": null,
      "alt-shift-g": "git_panel::ToggleFocus"
      // "ctrl-shift-g": ["task::Spawn", { "task_name": "LazyGit", "reveal_target": "center" }],
      // "shift shift": "file_finder::Toggle"
    }
  },

  // Pane navigation (works in both Workspace and Editor)
  {
    "context": "Workspace || Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },

  // ============================================================================
  // PROJECT PANEL
  // ============================================================================
  {
    "context": "ProjectPanel",
    "bindings": {
      "cmd-enter": "project_panel::Rename",
      "space e": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "m": "project_panel::CollapseAllEntries"
    }
  },

  // ============================================================================
  // EDITOR - Menus & Completions
  // ============================================================================
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-tab": "editor::ContextMenuPrevious",
      "ctrl-p": "editor::ContextMenuPrevious",
      "tab": "editor::ContextMenuNext",
      "ctrl-n": "editor::ContextMenuNext",
      "pageup": "editor::ContextMenuFirst",
      "pagedown": "editor::ContextMenuLast"
    }
  },

  // Disable tab for edit predictions (prevents conflicts)
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "tab": null
    }
  },

  // ============================================================================
  // VIM MODE
  // ============================================================================

  // Insert mode: escape with "jj"
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      "j j": "vim::NormalBefore"
    }
  },

  // Visual mode bindings
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": ["vim::PushAddSurrounds", {}],
      "space /": "editor::ToggleComments"
    }
  },

  // Normal + Visual: navigate by display lines (for wrapped text)
  {
    "context": "Editor && !VimCount && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      "j": ["vim::Down", { "display_lines": true }],
      "k": ["vim::Up", { "display_lines": true }]
    }
  },

  // Normal mode: leader key bindings (space as leader)
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // Diagnostics
      "space d s": "diagnostics::DeployCurrentFile",
      "space d l": "diagnostics::Deploy",

      // Code actions
      "space c f": "editor::Format",
      "space /": "editor::ToggleComments",

      // Navigation & Panels
      "space e": "project_panel::ToggleFocus",
      "space x": "pane::CloseActiveItem"

      // Git (commented out)
      // "space g g": ["task::Spawn", { "task_name": "LazyGit", "reveal_target": "center" }]
    }
  }
]
