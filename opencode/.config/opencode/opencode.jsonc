{
  "$schema": "https://opencode.ai/config.json",

  // Theme configuration
  "theme": "opencode",

  // Model configuration
  "model": "anthropic/claude-opus-4-5",

  // Auto-update configuration
  "autoupdate": true,

  // MCP servers
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"]
    }
  },

  "permission": {
    "edit": "ask",
    "webfetch": "ask"
  },

  // Disabled providers (none disabled by default)
  "disabled_providers": []
}
