{
  "$schema": "https://opencode.ai/config.json",

  // Theme configuration
  "theme": "opencode",

  // Model configuration
  "model": "glm-4.6",

  // Auto-update configuration
  "autoupdate": true,

  // MCP servers
  "mcp": {
    "atlassian-mcp-server": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.atlassian.com/v1/sse"]
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"]
    }
  },

  // Disabled providers (none disabled by default)
  "disabled_providers": []
}
